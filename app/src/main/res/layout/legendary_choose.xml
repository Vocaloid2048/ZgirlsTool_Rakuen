<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CC313131"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/legen_choose"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weap01_lvl1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:srcCompat="@drawable/legend_equip_katana1" />

                <ImageView
                    android:id="@+id/weap01_lvl2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_katana2" />

                <ImageView
                    android:id="@+id/weap01_lvl3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_katana3" />

                <ImageView
                    android:id="@+id/weap01_lvl4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_katana4" />

                <ImageView
                    android:id="@+id/weap01_lvl5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_katana5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weap02_lvl1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:srcCompat="@drawable/legend_shield1" />

                <ImageView
                    android:id="@+id/weap02_lvl2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_shield2" />

                <ImageView
                    android:id="@+id/weap02_lvl3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_shield3" />

                <ImageView
                    android:id="@+id/weap02_lvl4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_shield4" />

                <ImageView
                    android:id="@+id/weap02_lvl5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_shield5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weap03_lvl1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:srcCompat="@drawable/legend_equip_gun1" />

                <ImageView
                    android:id="@+id/weap03_lvl2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_gun2" />

                <ImageView
                    android:id="@+id/weap03_lvl3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_gun3" />

                <ImageView
                    android:id="@+id/weap03_lvl4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_gun4" />

                <ImageView
                    android:id="@+id/weap03_lvl5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/legend_equip_gun5" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>