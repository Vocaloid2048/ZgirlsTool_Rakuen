<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".old_ui.EXPCActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/expc_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC313131"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/blank_tb4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expc_now_tv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/exp_enabler_lvl"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/expc_now_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="2"
                        android:hint="15-49"
                        android:inputType="number"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <TextView
                    android:id="@+id/blank_tb1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/expc_now_tv2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Enabler's EXP"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/expc_aim_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:ems="2"
                        android:inputType="number"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <TextView
                    android:id="@+id/blank_tb"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buff_expc_tv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/exp_buff_day"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/expc_cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="Yes"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/blank_tb3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background_dark_press" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/expc_total"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_marginLeft="8dp"
                            android:text="@string/expc_basic"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_8_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon1" />

                                    <TextView
                                        android:id="@+id/textView80"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="100"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_1_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_4_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon4" />

                                    <TextView
                                        android:id="@+id/textView8"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="20,000"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_purple" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_5_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />

                            </TableRow>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_1_img"
                                        android:layout_width="48dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon1" />

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="1,000"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_2_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_5_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon5" />

                                    <TextView
                                        android:id="@+id/textView9"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="50,000"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_orange_dark" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_6_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </TableRow>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_2_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon2" />

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="5,000"
                                        android:textAlignment="center"
                                        android:textColor="#35A649" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_3_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_6_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon6" />

                                    <TextView
                                        android:id="@+id/textView12"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="80,000"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_orange_light" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_7_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </TableRow>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_3_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon3" />

                                    <TextView
                                        android:id="@+id/textView15"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="10,000"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_blue_dark" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_4_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/expc_7_img"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/exp_icon7" />

                                    <TextView
                                        android:id="@+id/textView16"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="100,000"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_red_dark"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <EditText
                                    android:id="@+id/expc_8_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </TableRow>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_dark_press" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lvl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Lvl : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/exp_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="EXP : 0/0"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/a"
                    android:textSize="24sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pb_exp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:indeterminate="true"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/tb_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_pink"
                android:onClick="calculate"
                android:text="@string/public_cal_btn"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>