                            android:layout_height="90dp"
                            android:layout_weight="0"
                            android:background="@drawable/romen_num04"
                            app:srcCompat="@drawable/boomer14" />

                        <ImageView
                            android:id="@+id/boom_img15"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_weight="0"
                            android:background="@drawable/romen_num05"
                            app:srcCompat="@drawable/boomer15" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/boom_tv1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/boom_tv2"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/boom_tv3"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/boom_tv4"
                            android:layout_width="90dp"
