<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/donate_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donate_tv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tb_donate"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/donate_choose"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/donate_img_1"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_1"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_2"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_2"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_3"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_3"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_4"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_4"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_5"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_5"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_6"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_6"
                            app:srcCompat="@drawable/app_icon_round_800x600" />

                        <ImageView
                            android:id="@+id/donate_img_7"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_kuang_7"
                            app:srcCompat="@drawable/app_icon_round_800x600" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/donate_tv_1"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $8"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_2"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $10"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_3"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $20"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_4"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $50"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_5"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $100"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_6"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HKD $150"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/donate_tv_7"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:text="HKD $200"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>