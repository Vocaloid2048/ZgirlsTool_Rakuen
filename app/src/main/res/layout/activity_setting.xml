                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="cf3c60"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
