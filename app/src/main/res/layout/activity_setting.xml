                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="#CC646464"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
