<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#05BBA9</item>
    </style>
    <style name="NoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#05BBA9</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BaseTheme" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#05BBA9</item>
        <item name="android:textColor">#C70A50</item>
        <item name="android:background">#424242</item>
    </style>
    <style name="Darkheme" >
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">#424242</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#424242</item>
    </style>
    <style name="Pinkyheme" >
        <item name="colorPrimary">#C70A50</item>
        <item name="colorPrimaryDark">#C70A50</item>
        <item name="colorAccent">#C70A50</item>
        <item name="android:textColor">#C70A50</item>
        <item name="android:background">#C70A50</item>
    </style>

    <style name="NormalDialogStyle_L">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/background</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalDialogAnim2</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="normalDialogAnim2" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/normal_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/normal_dialog_exit</item>
    </style>

    <style name="NormalDialogStyle_D">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/background</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalDialogAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="normalDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/normal_navi_down_enter</item>
        <item name="android:windowExitAnimation">@anim/normal_navi_down_exit</item>
    </style>

    <style name="normalFadeAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="NormalDialogStyle_N">
        <!--对话框背景 -->
        <item name="android:windowBackground">@color/colorWhiteAlpha</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--进出的显示动画 -->
        <item name="android:windowAnimationStyle">@style/normalFadeAnim</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomSeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:thumbOffset">8dip</item>
    </style>
</resources>
